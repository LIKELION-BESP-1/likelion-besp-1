<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Board">
    <select id="Board_getList"  resultType="BoardDto" parameterType="BoardDto">
        select
            A.boardId
             ,A.boardName
             ,A.createdDate
        from tb_board A
    </select>

    <select id="Board_getView"  resultType="BoardDto" parameterType="long">
        select
            A.boardId
             ,A.boardName
             ,A.createdDate
        from tb_board A
        where A.boardId = #{boardId}
    </select>

    <insert id="Board_insert" parameterType="BoardDto">
        <selectKey resultType="Integer" keyProperty="boardId" order="BEFORE">
            select nvl(max(boardId), 0)+1 from tb_board
        </selectKey>

        insert into tb_board
        (
        boardId
        ,boardName
        ,createdDate
        )
        values
        (
        #{boardId}
        ,#{boardName}
        ,#{createdDate}
        )
    </insert>
</mapper>
