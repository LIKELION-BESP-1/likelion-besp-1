<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.besp.likebesp1.board.repository.BoardRepository">
    <select id="getList"  resultType="com.besp.likebesp1.board.entity.BoardDto" parameterType="com.besp.likebesp1.board.entity.BoardDto">
        select
            boardId
             ,boardName
             ,createdDate
        from tb_board
    </select>

    <select id="getView"  resultType="com.besp.likebesp1.board.entity.BoardDto" parameterType="long">
        select
            boardId
             ,boardName
             ,createdDate
        from tb_board
        where boardId = #{boardId}
    </select>

    <insert id="insert" parameterType="com.besp.likebesp1.board.entity.BoardDto">
        <selectKey resultType="Integer" keyProperty="boardId" order="BEFORE">
            select nvl(max(boardId), 0)+1 from tb_board
        </selectKey>

        insert into tb_board
        (
        boardId
        ,boardName
        ,createdDate
        )
        values
        (
        #{boardId}
        ,#{boardName}
        ,#{createdDate}
        )
    </insert>
</mapper>